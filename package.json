{
  "name": "electron-template",
  "private": true,
  "version": "0.0.1",
  "main": "dist/main.js",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development vite",
    "start": "cross-env NODE_ENV=production && electron .",
    "build:vue": "rimraf dist && cross-env NODE_ENV=production && vue-tsc --noEmit && vite build",
    "build": "rimraf dist && rimraf app && vue-tsc --noEmit && vite build && cross-env NODE_ENV=production && electron-builder",
    "prepare": "husky install",
    "test": "npx eslint ./src  --ext ts,vue,js --fix",
    "commit": "git-cz"
  },
  "dependencies": {
    "element-plus": "^2.7.0",
    "vue": "^3.4.21",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@rollup/plugin-eslint": "^9.0.5",
    "@types/electron": "^1.6.10",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cz-customizable": "^7.0.0",
    "electron": "29.3.0",
    "electron-builder": "^24.13.3",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.24.1",
    "husky": "^9.0.11",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "sass": "^1.75.0",
    "typescript": "^5.2.2",
    "unplugin-auto-import": "^0.17.5",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.2.0",
    "vue-tsc": "^2.0.6"
  },
  "build": {
    "appId": "com.electron.desktop",
    "productName": "template",
    "asar": true,
    "copyright": "Copyright © 2023 moke",
    "directories": {
      "output": "app/"
    },
    "files": [
      "dist"
    ],
    "mac": {
      "icon": "./dist/mac/favicon.ico",
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "./dist/win/favicon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://127.0.0.1:8080"
      }
    ],
    "releaseInfo": {
      "releaseNotes": "版本更新的具体内容"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx,vue}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "{!(package)*.json,*.code-snippets,.!(browserslist)*rc}": [
      "prettier --write--parser json"
    ],
    "package.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  }
}
